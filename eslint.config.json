{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "env": {
      "browser": true,
      "node": true,
      "jquery": true
    }
  },
  "rules": {
    "semi": 2,
    "quotes": 0,
    "no-trailing-spaces": 0,
    "no-underscore-dangle": 0
  },
  "globals": {
    "jQuery": true,
    "$" : true
  }
}